---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import moltopiaLogo from '../assets/moltopia-logo.png';
import minomizeLogo from '../assets/minomize-logo.png';
import ratbotLogo from '../assets/ratbot-logo.png';
import cpjLogo from '../assets/cpj-logo.png';
const pageTitle = "Projects";

const projects = [
  {
    name: "Moltopia",
    date: "Feb 2026 – Present",
    description: "A virtual world for OpenClaw agents where they can chat, craft, and trade.",
    bullets: [],
    links: [
      { label: "Website", url: "https://moltopia.org/" },
      { label: "Twitter/X", url: "https://x.com/MoltopiaOrg" },
      { label: "GitHub", url: "https://github.com/Phineas1500/moltopia" },
    ],
  },
  {
    name: "NLP Research",
    date: "Oct 2025 – Present",
    description: "Exploring transformer limitations in reasoning using mechanistic interpretability techniques.",
    bullets: [],
    links: [
      { label: "Blog Post", url: "https://www.lesswrong.com/posts/kQvouwwHnEJkJ47uv/is-it-reasoning-or-just-a-fixed-bias-1" },
      { label: "GitHub", url: "https://github.com/Phineas1500/beyond-deduction" },
    ],
  },
  {
    name: "minomize",
    date: "Feb 2025 – Present",
    description: "A platform that speeds up videos using sentiment analysis. My contributions: ",
    bullets: [
      "Reduced video upload times by 50% via compression + parallel processing.",
      "Built GPU-backed video analysis pipeline in Python (Modal + FFmpeg).",
      "Implemented RAG workflows using Claude Sonnet 4.",
      "Integrated AWS S3 for storage.",
    ],
    links: [
      { label: "Website", url: "https://minomize.com" },
      { label: "GitHub (Frontend)", url: "https://github.com/Phineas1500/mino" },
      { label: "GitHub (Server)", url: "https://github.com/Phineas1500/mino-server" },
    ],
  },
  {
    name: "Bonsai",
    date: "Jan 2025 – May 2025",
    description: "A React Native iOS AI chatbot assistant that decomposes complex user tasks into subtasks.",
    bullets: [],
    links: [
      { label: "GitHub", url: "https://github.com/Phineas1500/Bonsai" },
    ],
  },
  {
    name: "Club Penguin Journey",
    date: "Apr 2024 – Aug 2025",
    description: "Developed for CPJourney, a recreation of Club Penguin with over 800,000 users. Used Phaser, an HTML5 game framework, to build rooms and functionalities.",
    bullets: [],
    links: [
      { label: "Website", url: "https://www.cpjourney.net/" },
    ],
  },
  {
    name: "@RatIsSoCute",
    date: "Apr 2021 – Present",
    description: "A Twitter/X bot with 40,000+ followers that replies to posts with dog pictures using the GraphQL API.",
    bullets: [],
    links: [
      { label: "Twitter/X", url: "https://x.com/RatIsSoCute" },
      { label: "GitHub", url: "https://github.com/Phineas1500/Rat-Bot-Bluesky" },
    ],
  },
];

const imageMap = {
  "Moltopia": moltopiaLogo,
  "minomize": minomizeLogo,
  "Club Penguin Journey": cpjLogo,
  "@RatIsSoCute": ratbotLogo,
} as Record<string, ImageMetadata>;

const experience = [
  {
    role: "Software Engineering Intern",
    org: "Data-Core Systems (AILABS Finance)",
    location: "Bristol, PA",
    date: "May 2025 – Present (Full-Time & Part-Time)",
    bullets: [
      { text: "Building agentic AI workflows for WealthEngine.AI, a stock recommendations and portfolio management platform powered by deep reinforcement learning." },
      { text: "Creating knowledge graphs for event-driven architectures by mapping value chains into ontologies." },
      { text: "Implemented data clustering, fine-tuning, news analytics, and web scraping." },
    ],
    links: [
      { label: "Website", url: "https://wealthengine.ai" },
    ],
  },
  {
    role: "Teaching Assistant & Team Lead",
    org: "The Data Mine",
    location: "West Lafayette, IN",
    date: "Aug 2023 – May 2025 (Part-Time)",
    bullets: [
      { text: "Pacific Air Forces (PACAF): Led students from Colorado, Purdue, and the Air Force Academy to build a financial forecaster.", sub: "Built a sentiment analysis + XGBoost solution to predict quarterly revenue for companies." },
      { text: "Pacific Life: Led students from Ball State and Notre Dame who were building actuarial and generative AI projects." },
    ],
    links: [
      { label: "Poster", url: "https://drive.google.com/file/d/1rF0nlNIA2XST8jmicy-OK7LOadxhPuux/view" },
    ],
  },
  {
    role: "Treasurer",
    org: "Purdue Hackers",
    location: "West Lafayette, IN",
    date: "Mar 2024 – Present",
    bullets: [
      { text: "Treasurer for Purdue Hackers, Purdue's largest CS club (~500 members).", sub: "Students meet every Friday night to build creative technical projects." },
      { text: "Secured grants from Paul Graham (Y Combinator co-founder), Cloudflare, Kleiner Perkins, Mitchell Hashimoto, Patrick McKenzie, and more." },
      { text: "Organized an AMA with Steve Wozniak." },
    ],
    links: [
      { label: "Website", url: "https://purduehackers.com" },
      { label: "YouTube (Woz AMA)", url: "https://www.youtube.com/watch?v=25RlBawQEb4" },
    ],
  },
];
---

<BaseLayout title={pageTitle}>
  <h1>{pageTitle}</h1>
  <p>Things I've built and am working on.</p>

  <div class="project-list">
    {projects.map((project) => {
      const image = imageMap[project.name];
      return (
        <div class="project-card not-prose">
          <div class="project-header">
            <div class="project-title">
              {image && (
                <Image src={image} alt={`${project.name} logo`} width={36} height={36} class="project-icon" />
              )}
              <h2>{project.name}</h2>
            </div>
            <span class="project-date">{project.date}</span>
          </div>
          <p>{project.description}</p>
          {project.bullets.length > 0 && (
            <ul>
              {project.bullets.map((bullet) => (
                <li>{bullet}</li>
              ))}
            </ul>
          )}
          <div class="project-links">
            {project.links.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer">{link.label} &rarr;</a>
            ))}
          </div>
        </div>
      );
    })}
  </div>

  <hr />

  <h1>Experience</h1>

  <div class="project-list">
    {experience.map((exp) => (
      <div class="project-card not-prose">
        <div class="project-content">
          <div class="project-header">
            <h2>{exp.role}</h2>
            <span class="project-date">{exp.date}</span>
          </div>
          <p class="exp-org">{exp.org} — {exp.location}</p>
          <ul>
            {exp.bullets.map((bullet) => (
              <li>
                {bullet.text}
                {bullet.sub && (
                  <ul>
                    <li>{bullet.sub}</li>
                  </ul>
                )}
              </li>
            ))}
          </ul>
          {exp.links && exp.links.length > 0 && (
            <div class="project-links">
              {exp.links.map((link) => (
                <a href={link.url} target="_blank" rel="noopener noreferrer">{link.label} &rarr;</a>
              ))}
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</BaseLayout>

<style>
  .project-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .project-card {
    border: 1px solid var(--ctp-color-surface2);
    border-radius: 6px;
    padding: 1.25rem 1.5rem;
    background-color: rgba(230, 219, 209, 0.35);
    transition: border-color 0.2s ease;
    color: var(--ctp-color-text);
  }

  .project-card h2 {
    color: var(--ctp-color-peach);
  }

  .project-card a {
    color: var(--ctp-color-blue);
    text-decoration: none;
  }

  .project-card a:hover {
    text-decoration: underline;
    color: var(--ctp-color-teal);
  }

  .project-card ul {
    list-style: disc;
    padding-left: 1.25rem;
    margin: 0.5rem 0 0;
  }

  .project-card ul > li::marker {
    color: var(--ctp-color-teal);
  }

  .project-card:hover {
    border-color: var(--ctp-color-overlay1);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .project-icon {
    border-radius: 6px;
    object-fit: cover;
  }

  .project-card h2 {
    margin: 0;
    padding: 0;
    border: none;
    font-size: 1.25rem;
    line-height: 1;
  }

  .project-date {
    color: var(--ctp-color-subtext0);
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .project-card p {
    margin: 0.25rem 0 0;
  }

  .project-card > .project-content > ul {
    margin: 0.5rem 0 0;
    padding-left: 1.25rem;
  }

  .project-card ul ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  .project-card li {
    margin: 0.15rem 0;
    font-size: 0.95rem;
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .project-links a {
    color: var(--ctp-color-blue);
    font-size: 0.9rem;
    text-decoration: none;
    font-weight: 500;
  }

  .project-links a:hover {
    text-decoration: underline;
    color: var(--ctp-color-teal);
  }

  .exp-org {
    color: var(--ctp-color-subtext0);
    font-size: 0.95rem;
    margin: 0.25rem 0 0 !important;
  }

</style>
